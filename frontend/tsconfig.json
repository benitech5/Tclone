{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                //  Tells TypeScript your root directory
    "paths": {
      "": [""]                   // Optional fallback path mapping
    },
    "moduleResolution": "node",   //  Ensures compatibility with imports
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}